<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rule text</th>
      <th>image</th>
      <th>rule_pdf</th>
      <th>download</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.rule_text %></td>
        <td><%= image_tag game.box_image.variant(resize: "100x100").processed %></td>
        <td><%= link_to 'rules', rails_blob_path(game.rules_pdf) %></td>
        <td><%= link_to (image_tag (game.box_image.variant(resize: "100x100").processed)), rails_blob_path(game.box_image), 
        disposition: 'attachement'
        %></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

